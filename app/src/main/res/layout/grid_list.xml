<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/person"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvfullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="जित बहादुर मगर"
        android:layout_marginLeft="30dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/list_image"
        app:layout_constraintTop_toTopOf="@+id/list_image" />

    <TextView
        android:id="@+id/tvfatherdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fathername"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvfullname"
        app:layout_constraintTop_toBottomOf="@+id/tvfullname" />

    <TextView
        android:id="@+id/fatherdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="कृष्ण बहादुर मगर"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvfatherdt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvfatherdt"
        app:layout_constraintTop_toTopOf="@+id/tvfatherdt" />

    <TextView
        android:id="@+id/tvmotherdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/mothername"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvfatherdt"
        app:layout_constraintTop_toBottomOf="@+id/tvfatherdt" />

    <TextView
        android:id="@+id/motherdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="माया मगर"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvmotherdt"
        app:layout_constraintStart_toEndOf="@+id/tvmotherdt"
        app:layout_constraintTop_toBottomOf="@+id/fatherdt"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>